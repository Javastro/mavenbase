   </properties>
   <licenses>
      <license>
         <url>https://www.gnu.org/licenses/agpl-3.0.html</url>
         <name>AGPL-3.0</name>
      </license>
   </licenses>
   <organization>
      <name>JBCA, University of Manchester</name>
      <url>http://www.jb.man.ac.uk/</url>
   </organization>
   <scm>
      <url>https://github.com/Javastro/${project.name}</url>
      <connection>scm:git:git://github.com/Javastro/${project.name}.git</connection>
      <developerConnection>scm:git:git@github.com:Javastro/${project.name}.git</developerConnection>
