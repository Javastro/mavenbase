   <inceptionYear>2010</inceptionYear>
   <properties>
      <eclipselink.version>2.7.4</eclipselink.version>
      <jackson.version>2.9.9</jackson.version>
      <jaxb-ri.version>2.2.11</jaxb-ri.version>
